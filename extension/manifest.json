{
  "manifest_version": 3,
  "name": "Phantom",
  "description": "Hide in plain sight â€” data poisoning privacy tool",
  "version": "0.1.0",
  "permissions": ["tabs", "storage", "alarms", "activeTab", "scripting"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "Phantom"
  }
}
